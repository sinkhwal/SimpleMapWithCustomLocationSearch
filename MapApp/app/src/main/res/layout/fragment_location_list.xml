<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:layout_marginTop="50dp">

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:iconifiedByDefault="false"
        android:background="@drawable/searchtexbox"
        android:queryHint="Find a Location"
        android:layout_margin="16dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        />

    <androidx.recyclerview.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/list"
        android:name="com.example.latechengage.LocationFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:context=".Fragments.LocationFragment"
        tools:listitem="@layout/fragment_location">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>